swift_minXAvailable   400
swift_maxXAvailable   7500
swift_nBinsLeft  13
swift_nBinsRight  13
swift_fixLow  true
swift_fixHigh  true
swift_truncateHigh       false

##########################################
# for limits
##########################################

doExtendedRange false

nSigmas           3.

##########################################
# Background
##########################################

doFitError        true

nFitsInBkgError   100

##########################################
# Lumi
##########################################

